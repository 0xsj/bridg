{
  "name": "bridg",
  "version": "1.0.23",
  "description": "Query your database from any JavaScript frontend",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "test": "npx vitest",
    "build": "tsc --project ./tsconfig.build.json",
    "build-client": "tsc ./tmp/**/*.ts --declaration --outDir ./ && mv client/* ./ && rm -rf ./tmp && rm -rf ./client",
    "generate-ts": "node ./dist/generator/index.js ../../prisma/schema.prisma --outDir ./tmp",
    "prepublish": "npm run build",
    "generate": "npm run generate-ts && npm run build-client"
  },
  "keywords": [],
  "author": "Joe Roddy",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^18.11.18",
    "@types/strip-comments": "^2.0.1",
    "typescript": "^4.9.5",
    "vitest": "^0.27.2"
  },
  "dependencies": {
    "strip-comments": "^2.0.1"
  }
}
